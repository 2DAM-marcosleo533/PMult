<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Imagen de la brújula -->
    <ImageView
        android:id="@+id/compass_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/brujula"
        android:layout_centerInParent="true" />

    <!-- TextView para mostrar grados -->
    <TextView
        android:id="@+id/degrees_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grados: 0°"
        android:textSize="20sp"
        android:layout_below="@id/compass_image"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp" />

    <!-- TextView para mostrar dirección cardinal -->
    <TextView
        android:id="@+id/cardinal_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dirección: N"
        android:textSize="20sp"
        android:layout_below="@id/degrees_text"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp" />

</RelativeLayout>
